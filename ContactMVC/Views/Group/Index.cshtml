@using Contact.Model
@using Contact.CRUD
@using System.Data

@model Group
@{
  ViewBag.Title = "Index";
  DataTable tbl = new GroupCRUD().GetAllGroup();
}

<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Group</h1>
  </div>
  <div class="col-lg-12">
    <form class="form-horizontal" method="post" action="/group">
      <div class="col-lg-12 form-group">
        <label for="Name" class="control-label col-lg-2">Name</label>
        <div class="col-lg-10">
        @Html.TextBoxFor(m=>m.Name, new { @id= "Name", @class= "form-control", @placeholder= "Enter group name" })
        </div>
      </div>
      <div class="col-lg-12 form-group">
        <div class="col-lg-offset-2 col-lg-3">
          <input type="submit" class="btn btn-primary" value="Add" />
        </div>
      </div>

    </form>
  </div>

  <div class="col-lg-12">
    <table class="table table-bordered table-striped table-hover">
      <thead>
        <tr>
        <th>Name</th>
        <th>Option</th>
        </tr>
      </thead>
      <tbody>
        @foreach (DataRow row in tbl.Rows)
        {
          <tr>
          <td>@row["Name"]</td>
          <td>
            <form action="/group/delete/@row["id"]" method="post">
              <input type="submit" value="Delete" class="btn btn-danger"/>
            </form>
          </td>
          </tr>
        }
      </tbody>
    </table>
  </div>
</div>
