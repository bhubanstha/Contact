
@{
  ViewBag.Title = "Index";
  Layout = "~/Views/Shared/_PreLogin.cshtml";
}

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login-panel panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Please Sign In</h3>
      </div>
      <div class="panel-body">
        <form role="form" method="post" action="/user/login">
          <fieldset>
            <div class="form-group">
              @Html.TextBox("userName", "", new { @class = "form-control", @placeholder = "User Name", @type = "text", @autofocus = "" })
            </div>
            <div class="form-group">
              @Html.TextBox("password", "", new { @class = "form-control", @placeholder = "Password", @type = "password" })
            </div>
            <!-- Change this to a button or input when using this as a form -->
            <input type="submit" class="btn btn-lg btn-success btn-block" value="Login" />
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>
